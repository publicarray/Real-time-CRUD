extends layout
block title
  title CMA
block content
  h1
    a(href="/") CMA
  table(class="table table-hover table-striped")
    thead
      tr
        th Event
        th Ring
        th # of Competitors
        th Done
    tbody(id="data")
      each val in events
        tr(id=val.id class=val.done === 0 ? '' : 'info')
          td= val.name
          td
            a(href="/"+val.ring)= val.ring
          td= val.competitors
          if val.done===0
            td No
          else
            td Yes
block script
  script(src="/client.js")
