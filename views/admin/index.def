{{#def.include('../layout')}}
{{##def.title:Admin#}}
{{##def.content:
<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="editModalLabel">Edit</h4>
      </div>
      <div class="modal-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Event</th>
              <th>Ring</th>
              <th># of Competitors</th>
              <th>Order Priority</th>
            </tr>
          </thead>
         <tbody>
          <div role="form" class="form-inline">
            <td><span id="idModel"></span></td>
            <td><input type="text" id="nameModel" placeholder="Enter Event" class="form-control"></td>
            <td><input type="number" id="ringModel" placeholder="Enter Ring" class="form-control"></td>
            <td><input type="number" id="compModel" placeholder="Enter # of Competitors" class="form-control"></td>
            <td><input type="number" id="orderModel" placeholder="Enter Order Priority" class="form-control"></td>
            <td style="display:none;"><span id="doneModel"></span></td>
          </div>
         </tbody>
       </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" onclick="reset()">Close</button>
        <button type="button" class="btn btn-primary" type="submit" data-dismiss="modal" onclick="edit()">Save changes</button>
      </div>
    </div>
  </div>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Event</th>
      <th>Ring</th>
      <th># of Competitors</th>
      <th>Order Priority</th>
      <th>Event Finished</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id="data">
  {{~it.events :val:index}}
    <tr id="{{=val.id}}" {{? val.done === 1 }}class="success"{{?}}>
      <td>{{=val.id}}</td>
      <td>{{=val.name}}</td>
      <td>{{=val.ring}}</td>
      <td>{{=val.competitors}}</td>
      <td>{{=val.orderNo}}</td>
      <td><input type="checkbox"{{? val.done === 1 }} checked{{?}}></td>
      <td><button class="btn btn-primary modelBtn" type="button" data-toggle="modal" data-target="#editModal">Edit</button></td>
      <td><button class="btn btn-danger" type="button">Delete</button></td>
    </tr>
  {{~}}
  </tbody>
  <tbody>
    <tr>
      <form id="create" role="form">
        <td></td>
        <td><input type="text" id="name" placeholder="Enter Event" class="form-control"></td>
        <td><input type="number" id="ring" placeholder="Enter Ring" class="form-control"></td>
        <td><input type="number" id="comp" placeholder="Enter # of Competitors" class="form-control"></td>
        <td><input type="number" id="order" placeholder="Enter Order Priority" class="form-control"></td>
        <td><input type="checkbox" id="done"></td>
        <td><button type="submit" class="btn btn-primary">Create</button></td>
        <td></td>
      </form>
    </tr>
  </tbody>
</table>
<div class="form-inline">
  <input type="number" id="users" placeholder="Enter no of Competitors" class="form-control">
  <button class="btn btn-primary" type="button" onclick="updateUsers()">Update</button>
</div>
#}}
{{##def.script:<script src="/js/client-admin.js"></script>#}}
