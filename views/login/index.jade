extends ../layout
block title
  title Login
block content
  h1 CMA
  div.row
    div.col-sm-6.col-md-4.col-md-offset-4
      h1.text-center Sign in
      br
      form(role="form" method="POST")
        div.form-group
          input(type='text', id="name", name='username' class='form-control', placeholder='Username',required, autofocus)
        div.form-group
          input(type='password', id="pass", name='password' class='form-control', placeholder='Password', required)
        if message
          p.alert.alert-danger #{message}
        button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
block script
