extends ../layout
block title
  title Login
block content
  h1 CMA
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Sign in
          div.account-wall
            br
            form(class='form-signin')
              input(type='text', id="name", name='username' class='form-control', placeholder='Email',required, autofocus)
              input(type='password', id="pass", name='password' class='form-control', placeholder='Password', required)
              button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
              span.clearfix
          #message
          if message
            h1.text-center.error-message #{message}
block script
  script $(document).ready(function(){var socket = io(); $('.form-signin').submit(function(){ socket.emit('login', $('#name').val(), $('#pass').val()) });});
