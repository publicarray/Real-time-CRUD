{{#def.include('../layout')}}
{{##def.title:Login#}}
{{##def.content:
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <h1 class="text-center">Sign in</h1>
    <br>
    <form method="GET">
      <div class="form-group">
        <input type="text" id="name" name="name" placeholder="Username" required="" autofocus="" class="form-control" autocomplete="off">
      </div>
      <div class="form-group">
        <input type="password" id="pass" name="pass" placeholder="Password" required="" class="form-control" autocomplete="off">
      </div>
        {{? it.message }}<p class="alert alert-danger">{{!it.message}}</p>{{?}}
        <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
    </form>
  </div>
</div>
#}}
{{##def.script:<script src="/js/login.js"></script>#}}
