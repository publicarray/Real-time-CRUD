extends ../layout
block title
  title Ring
    if events[0]
      =events[0].ring
block content
  h2 Ring&nbsp;
    if events[0]
      =events[0].ring
  table(class="table table-hover table-striped")
    thead
      tr
        th Event
        th Ring
        th # of Competitors
        th Done
    tbody(id="data")
      each val in events
        tr(id=val.id class=val.done === 0 ? '' : 'success')
          td= val.name
          td= val.ring
          td= val.competitors
          if val.done===0
            td No
          else
            td Yes
block script
  script(src="/client-ring.js")
