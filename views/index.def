<table class="table table-hover table-striped" id="table">
  <thead>
    <tr>
      {{ for(var col in it.table[0]) { }}
        {{? col !== 'id'}}<th>{{!col}}</th>{{?}}
      {{ } }}
    </tr>
  </thead>
  <tbody id="data">

  {{~it.table :row}}
    <tr id="{{!row.id}}">
    {{ for(var item in row) { }}
      {{? it.schema[item] === 'boolean' && !row[item] }}
        <td>No</td>
      {{?? it.schema[item] === 'boolean' && row[item] }}
        <script type="text/javascript">
          document.getElementById("{{!row.id}}").className = "success";
        </script>
        <td>Yes</td>
      {{?? item !== 'id'}}
        <td>{{!row[item]}}</td>
      {{?}}
    {{ } }}
    </tr>
  {{~}}

  </tbody>
</table>
#}}
{{##def.script:
<script src='/lib/tablesort.min.js'></script>
<script src='js/client.min.js'></script>
<script>
$(document).ready(function () {
  var socket = io();

  socket.on('add', function (data) {
    document.getElementById('data').innerHTML += (display(data));
    sort.refresh();
  });
  socket.on('update', function (data) {
    document.getElementById(data.id).outerHTML = (display(data));
    sort.refresh();
  });
  socket.on('delete', function (id) {
    document.getElementById(id).remove();
  });
  socket.on('disconnect',function () {
    $('#alert').fadeIn(1000);
  });
  socket.on('connect',function () {
    $('#alert').fadeOut(1000);
  });
});
</script>
#}}
