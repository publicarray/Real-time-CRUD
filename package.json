{
  "name": "Real-time-CRUD",
  "version": "0.0.3",
  "description": "Easy to configure, Real-time CRUD Database Web Application",
  "author": "Sebastian Schmidt",
  "repository": "https://github.com/publicarray/Real-time-CRUD",
  "license": "Apache-2.0",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "cookie-session": "^2.0.0-beta.3",
    "dot-emc": "^0.1.2",
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "knex": "^0.14.6",
    "mysql": "^2.15.0",
    "pg": "^7.4.0",
    "sanitizer": "^0.1.3",
    "socket.io": "^2.1.0",
    "sqlite3": "^4.0.0"
  },
  "scripts": {
    "first-run": "yarn install --production; yarn bower install",
    "first-run-dev": "yarn; bower install",
    "update-all": "yarn upgrade --latest; npm shrinkwrap; yarn bower update",
    "build": "gulp",
    "start": "node server",
    "test": "snyk test && xo"
  },
  "devDependencies": {
    "bower": "^1.8.4",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "snyk": "^1.78.1",
    "xo": "^0.21.0"
  },
  "xo": {
    "space": true,
    "ignores": [
      "public/lib/**"
    ],
    "rules": {
      "no-var": 0,
      "prefer-const": 0,
      "prefer-spread": 0,
      "prefer-reflect": 0,
      "prefer-template": 0,
      "require-yield": 0,
      "arrow-parens": 0,
      "object-shorthand": 1,
      "prefer-arrow-callback": 0
    }
  }
}
